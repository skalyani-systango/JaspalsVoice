<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/medicines_name"
            android:textSize="@dimen/text_normal_size" />

        <EditText
            android:id="@+id/edit_value_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="text"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:id="@+id/show_value_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/default_text_when_not_specified"
            android:textSize="@dimen/text_normal_size"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/medicines_dosage"
            android:textSize="@dimen/text_normal_size" />

        <EditText
            android:id="@+id/edit_value_dosage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="text"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:id="@+id/show_value_dosage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/default_text_when_not_specified"
            android:textSize="@dimen/text_normal_size"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/medicines_reason"
            android:textSize="@dimen/text_normal_size" />

        <EditText
            android:id="@+id/edit_value_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="text"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:id="@+id/show_value_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/default_text_when_not_specified"
            android:textSize="@dimen/text_normal_size"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/medicines_frequency"
            android:textSize="@dimen/text_normal_size" />

        <EditText
            android:id="@+id/edit_value_frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="text"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:id="@+id/show_value_frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/default_text_when_not_specified"
            android:textSize="@dimen/text_normal_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <uk.co.jaspalsvoice.jv.views.YesNoCardView
            android:id="@+id/renalDosageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:elevation="@dimen/elevation"
            android:padding="@dimen/margin_small" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <uk.co.jaspalsvoice.jv.views.YesNoCardView
            android:id="@+id/hepaticDosageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:elevation="@dimen/elevation"
            android:padding="@dimen/margin_small" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/edit"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_span="2"
            android:text="@string/medicines_edit" />
    </TableRow>

    <include
        android:layout_width="match_parent"
        android:layout_height="2dp"
        layout="@layout/divider" />

</TableLayout>