<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:stretchColumns="1">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/type"/>

        <EditText
            android:id="@+id/typeEdittext"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/typeTextView"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/default_text_when_not_specified"
            android:visibility="gone"/>

    </TableRow>


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/medicines_name"/>

        <EditText
            android:id="@+id/nameEdittext"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/show_value_name"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/default_text_when_not_specified"
            android:visibility="gone"/>

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/address_title"/>

        <EditText
            android:id="@+id/addressEdittext"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/show_value_dosage"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/default_text_when_not_specified"
            android:visibility="gone"/>

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/gp_medical_team_phone"/>

        <EditText
            android:id="@+id/phoneEdittext"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/show_value_reason"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/default_text_when_not_specified"
            android:visibility="gone"/>

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/gp_medical_team_email"/>

        <EditText
            android:id="@+id/emailEdittext"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/show_value_frequency"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/default_text_when_not_specified"
            android:visibility="gone"/>

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/saveButton"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/save"/>
    </TableRow>
</TableLayout>